{
  "manifest_version": 2,

  "name": "Tumblr Pixiv Source",
  "description": "Automatic adding pixiv source to your tumblr posts.",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Add Pixiv source in caption!"
  },

  "permissions": [
    "activeTab",
    "https://saucenao.com/search.php*"
  ]
}
